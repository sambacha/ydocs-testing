# gitattributes
*.md     text
*.yml    text
*.html   text diff=html

# avoid merge conflicts in CHANGELOG
/CHANGELOG.md		merge=union

# export ignore 
/.github            export-ignore
/.editorconfig      export-ignore
/.gitattributes     export-ignore
/.gitignore         export-ignore

# shell scripts
git_ssh text eol=lf
repo text eol=lf
hooks/* text eol=lf

# images
*.png diff=exif
*.jpg diff=exif
*.svg diff=exif
